# pnpm configuration for optimal performance and strict dependency management

# Performance optimizations
prefer-frozen-lockfile=false
auto-install-peers=true
strict-peer-dependencies=false

# Hoisting configuration for better compatibility
hoist=true
hoist-pattern=*

# Network and cache settings
network-timeout=120000
fetch-timeout=120000
fetch-retries=5

# Enable shamefully-hoist for better Next.js compatibility
shamefully-hoist=true

# Fix for Next.js specific dependencies
public-hoist-pattern[]=*styled-jsx*
public-hoist-pattern[]=*@next*

# Logging
loglevel=warn

# Registry settings (default to npm registry)
registry=https://registry.npmjs.org/

# Windows specific optimizations
symlink=false
package-import-method=copy

# Node linker for better Next.js compatibility
node-linker=hoisted